{
  "name": "playwright-testng-framework",
  "version": "1.0.0",
  "description": "End-to-End test automation framework using Playwright with TestNG model",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:report:current": "playwright show-report ./reports/current/html-report",
    "test:report:latest": "node -e \"const fs=require('fs');const path=require('path');const archives=fs.readdirSync('./reports/archive').filter(f=>fs.statSync(path.join('./reports/archive',f)).isDirectory()).sort().reverse();if(archives.length>0){console.log('Latest archive:',archives[0]);}\"",
    "install:browsers": "playwright install",
    "codegen": "playwright codegen",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean:reports": "node -e \"const fs=require('fs');const path=require('path');if(fs.existsSync('./reports')){fs.rmSync('./reports',{recursive:true,force:true});console.log('Reports cleaned');}\"",
    "archive:reports": "node -e \"const {ReportManager}=require('./dist/utils/report-manager');new ReportManager().archiveCurrentReports();\"",
    "ci:setup": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh setup",
    "ci:test": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh test",
    "ci:test-all": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh test-all",
    "ci:report": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh report",
    "ci:archive": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh archive",
    "ci:cleanup": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh cleanup",
    "ci:full": "chmod +x scripts/ci-setup.sh && ./scripts/ci-setup.sh full",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:parallel": "playwright test --workers=4",
    "test:retry": "playwright test --retries=2",
    "test:headed-all": "playwright test --headed --project=chromium --project=firefox --project=webkit",
    "test:api": "playwright test tests/api.spec.ts",
    "test:performance": "playwright test tests/performance.spec.ts",
    "test:api:headed": "playwright test tests/api.spec.ts --headed",
    "test:performance:headed": "playwright test tests/performance.spec.ts --headed",
    "test:api:debug": "playwright test tests/api.spec.ts --debug",
    "test:performance:debug": "playwright test tests/performance.spec.ts --debug",
    "build": "tsc",
    "prebuild": "npm run lint",
    "postbuild": "echo 'Build completed successfully'",
    "preinstall": "node -e \"console.log('Installing Playwright Framework dependencies...')\"",
    "postinstall": "echo 'Framework setup completed. Run npm run install:browsers to install browsers.'",
    "portfolio:setup": "chmod +x scripts/setup-portfolio.sh && ./scripts/setup-portfolio.sh",
    "showcase": "chmod +x scripts/showcase.sh && ./scripts/showcase.sh",
    "demo": "chmod +x scripts/demo.sh && ./scripts/demo.sh",
    "portfolio:demo": "npm run demo",
    "portfolio:showcase": "npm run showcase",
    "portfolio:test": "npm run test:chrome && npm run test:report:current",
    "portfolio:full": "npm run test && npm run test:report:current"
  },
  "keywords": [
    "playwright",
    "testng",
    "automation",
    "testing",
    "pom",
    "ci-cd",
    "e2e",
    "portfolio",
    "qa-automation",
    "test-automation",
    "api-testing",
    "performance-testing",
    "load-testing",
    "stress-testing"
  ],
  "author": "Test Automation Developer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "moment": "^2.29.4",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/playwright-testng-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/playwright-testng-framework/issues"
  },
  "homepage": "https://github.com/your-username/playwright-testng-framework#readme"
} 